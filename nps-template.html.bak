    <script>
    // --- NPS Demo ---
    document.querySelectorAll('.nps-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.nps-btn').forEach(b => {
                b.style.background = '';
                b.style.color = '';
                b.style.borderColor = '';
            });
            const val = parseInt(this.dataset.value);
            let color;
            if (val >= 9) color = 'var(--score-promoter)';
            else if (val >= 7) color = 'var(--score-passive)';
            else color = 'var(--score-detractor)';
            this.style.background = color;
            this.style.color = '#fff';
            this.style.borderColor = color;
            // Show label
            const label = document.getElementById('npsLabel');
            if (val >= 9) label.textContent = 'Promoter — likely to recommend';
            else if (val >= 7) label.textContent = 'Passive — satisfied but unenthusiastic';
            else label.textContent = 'Detractor — unlikely to recommend';
            label.style.color = color;
        });
    });

    // --- NPS Calculator ---
    function calculateNPS() {
        const p = parseInt(document.getElementById('promoters').value) || 0;
        const pa = parseInt(document.getElementById('passives').value) || 0;
        const d = parseInt(document.getElementById('detractors').value) || 0;
        const total = p + pa + d;

        if (total === 0) {
            document.getElementById('npsResult').textContent = '—';
            document.getElementById('npsResult').style.color = 'var(--text-muted)';
            document.getElementById('ciDisplay').style.display = 'none';
            document.getElementById('sampleWarning').style.display = 'none';
            return;
        }

        const pPct = p / total;
        const dPct = d / total;
        const nps = Math.round((pPct - dPct) * 100);

        const result = document.getElementById('npsResult');
        result.textContent = (nps >= 0 ? '+' : '') + nps;
        if (nps >= 50) result.style.color = 'var(--score-promoter)';
        else if (nps >= 0) result.style.color = 'var(--score-passive)';
        else result.style.color = 'var(--score-detractor)';

        // Confidence interval (95%) using normal approximation
        // Variance of NPS = var(promoter%) + var(detractor%) + 2*cov(promoter%, detractor%)
        // Simplified: SE ≈ sqrt((pPct + dPct - (pPct - dPct)^2) / total)
        const npsDecimal = pPct - dPct;
        const variance = (pPct + dPct - npsDecimal * npsDecimal) / total;
        const se = Math.sqrt(Math.max(variance, 0));
        const ci95 = se * 1.96 * 100;

        const ciDisplay = document.getElementById('ciDisplay');
        const ciLow = document.getElementById('ciLow');
        const ciHigh = document.getElementById('ciHigh');

        if (total >= 30) {
            ciDisplay.style.display = 'flex';
            const low = Math.round(nps - ci95);
            const high = Math.round(nps + ci95);
            ciLow.textContent = (low >= 0 ? '+' : '') + low;
            ciHigh.textContent = (high >= 0 ? '+' : '') + high;
        } else {
            ciDisplay.style.display = 'none';
        }

        // Small sample warning
        const warning = document.getElementById('sampleWarning');
        if (total < 100) {
            warning.style.display = 'block';
            const moe = Math.round(ci95);
            warning.innerHTML = '<strong>Small sample:</strong> With ' + total + ' responses, your margin of error is &plusmn;' + moe + ' points. Aim for 200+ responses for reliable trends.';
        } else {
            warning.style.display = 'none';
        }

        // Update benchmark comparison
        const benchEl = document.getElementById('benchmarkCompare');
        if (benchEl) {
            const saasAvg = 41;
            const diff = nps - saasAvg;
            benchEl.textContent = (diff >= 0 ? '+' : '') + diff + ' vs SaaS avg (+41)';
            benchEl.style.color = diff >= 0 ? 'var(--score-promoter)' : 'var(--score-detractor)';
        }
    }

    // Auto-calculate on input
    ['promoters', 'passives', 'detractors'].forEach(id => {
        const el = document.getElementById(id);
        if (el) el.addEventListener('input', calculateNPS);
    });

    // --- Sample Size Calculator ---
    function calculateSampleSize() {
        const pop = parseInt(document.getElementById('ssPop').value) || 0;
        const moeInput = parseInt(document.getElementById('ssMoe').value) || 5;
        const conf = parseInt(document.getElementById('ssConf').value) || 95;

        if (pop === 0) {
            document.getElementById('ssResult').textContent = '—';
            return;
        }

        // Z-score lookup
        let z;
        if (conf >= 99) z = 2.576;
        else if (conf >= 95) z = 1.96;
        else if (conf >= 90) z = 1.645;
        else z = 1.28;

        const p = 0.5; // max variability
        const moe = moeInput / 100;

        // Cochran's formula with finite population correction
        const n0 = (z * z * p * (1 - p)) / (moe * moe);
        const n = Math.ceil(n0 / (1 + (n0 - 1) / pop));

        document.getElementById('ssResult').textContent = n.toLocaleString();

        // Expected response note
        const responseNote = document.getElementById('ssResponseNote');
        if (responseNote) {
            const emailSends = Math.ceil(n / 0.25); // assume 25% response rate
            const inAppSends = Math.ceil(n / 0.45); // assume 45% response rate
            responseNote.innerHTML = 'At 25% email response rate, send to <strong>' + emailSends.toLocaleString() + '</strong> people. At 45% in-app rate, show to <strong>' + inAppSends.toLocaleString() + '</strong>.';
            responseNote.style.display = 'block';
        }
    }

    // Auto-calculate sample size on input
    ['ssPop', 'ssMoe', 'ssConf'].forEach(id => {
        const el = document.getElementById(id);
        if (el) el.addEventListener('input', calculateSampleSize);
    });

    // --- Radio Pill Toggles ---
    document.querySelectorAll('.radio-pill').forEach(pill => {
        pill.addEventListener('click', function() {
            this.parentElement.querySelectorAll('.radio-pill').forEach(p => p.classList.remove('active'));
            this.classList.add('active');
        });
    });

    // --- FAQ Toggle ---
    function toggleFaq(btn) {
        const item = btn.parentElement;
        const answer = item.querySelector('.faq-a');
        const icon = btn.querySelector('.faq-icon');
        const isOpen = answer.style.maxHeight && answer.style.maxHeight !== '0px';

        if (isOpen) {
            answer.style.maxHeight = '0px';
            answer.style.paddingBottom = '0';
            icon.textContent = '+';
        } else {
            answer.style.maxHeight = answer.scrollHeight + 'px';
            answer.style.paddingBottom = '16px';
            icon.textContent = '−';
        }
    }

    // --- Smooth scroll for anchor links ---
    document.querySelectorAll('a[href^="#"]').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
    });
    </script>
</body>
</html>
